@import 'ice9-style-variables.styl'

/*! ////-------------------- Globales ----- */

*
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;

html
body
	color grisObscuro
	font-family 'Muli', sans-serif
	font-size: 14px
	line-height 1.4
	margin 0
	padding 0
	height 100%
	width 100%
	
h1
	font-size 22px
	margin 0
	text-align center

a
	color inherit
	text-decoration none
	transition(color 0.2s ease)
	
	&:hover
		color azulClaro
		
select
	border 1px solid grisObscuro
	color grisSoft
	font-size 18px
	padding 15px 80px
	text-align center
	-webkit-appearance none
	-moz-appearance none
	appearance none
	background url("../images/ice9-image-down-icon-light.svg") no-repeat right 10px center
	background-size 25px
	
	&:focus
		outline none
		border-color grisSoft
		
input[type=submit]
	border 1px solid grisObscuro
	font-size 18px
	padding 15px 80px
	background none
	transition(all 0.2s ease)
	
	&:hover
		background azulClaro
		border-color azulClaro
		color #ffffff
		cursor pointer
		
input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button {
	-webkit-appearance: none; 
	margin: 0;
}

